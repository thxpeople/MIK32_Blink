{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug MIK32",
            "type": "cortex-debug",
            "request": "attach",
            "cwd": "${workspaceFolder}",
            "executable": "./build/blink.elf",
            "servertype": "openocd",
            "gdbPath": "riscv-none-elf-gdb",
            "configFiles": [
                "interface/ftdi/mikron-link.cfg",
                "target/mik32.cfg"
            ],
            "searchDir": [
                "${env:MIK32_TOOLCHAIN}/mik32-uploader/openocd-scripts"
            ],
            "postStartSessionCommands": [
                "set mem inaccessible-by-default on",
                "mem 0x0040000 0x0090000 rw",
                "mem 0x2000000 0x2004000 rw",
                "mem 0x1000000 0x1002000 ro",
                "mem 0x80000000 0xffffffff ro ",
                "set arch riscv:rv32",
                "set remotetimeout 10",
                "set remote hardware-breakpoint-limit 2"
            ],
            "svdFile": "${env:MIK32_TOOLCHAIN}/mik32v2.svd"
        }
    ]
}